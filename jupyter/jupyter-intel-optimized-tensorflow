Bootstrap: docker
From: docker.io/library/ubuntu:20.04

%files
    jupyter/start /opt

%post

    apt-get update && apt-get install -y python3-pip  python3-setuptools  wget
    rm -rf /var/lib/apt/lists/*

    cd /opt
    wget -c https://repo.anaconda.com/miniconda/Miniconda3-py37_23.1.0-1-Linux-x86_64.sh
    chmod 777 Miniconda3-py37_23.1.0-1-Linux-x86_64.sh
    bash Miniconda3-py37_23.1.0-1-Linux-x86_64.sh -b -p /opt/miniconda
    rm -f Miniconda3-py37_23.1.0-1-Linux-x86_64.sh

    export PATH="/opt/miniconda/bin:$PATH"
    conda install -y python=3.7
    pip install intel-tensorflow==2.8.0
    pip install protobuf==3.20.0 # tensorflow 2.8.0 need protobuf==3.20.0
    pip install notebook==6.4.12
    chmod 777 /opt/start

%environment
    IMAGE_CONDA_ENV=base
    export PATH="/opt/miniconda/bin:$PATH" IMAGE_CONDA_ENV
